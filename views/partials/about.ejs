<script>
   function handleLike(button) {
      if (!button.classList.contains('active')) {
         button.classList.add('active');
         const dislikeButton = button.nextElementSibling;
         dislikeButton.classList.remove('active');
         button.innerHTML = '<i class="fas fa-thumbs-up"></i> Liked';
         dislikeButton.innerHTML = '<i class="fas fa-thumbs-down"></i> Dislike';
      }
   }

   function handleDislike(button) {
      if (!button.classList.contains('active')) {
         button.classList.add('active');
         const likeButton = button.previousElementSibling;
         likeButton.classList.remove('active');
         button.innerHTML = '<i class="fas fa-thumbs-down"></i> Disliked';
         likeButton.innerHTML = '<i class="fas fa-thumbs-up"></i> Like';
      }
   }
</script>


